{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "backend": {
      "dependsOn": [],
      "outputs": []
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "frontend": {
      "dependsOn": [],
      "outputs": [
        "apps/frontend/.next/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    }
  },
  "ui": "tui"
}